---
export interface Props {
  id?: string;
  target?: "_self" | "_blank" | "_parent" | "_top";
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const { id, href, target, class: className = "", ariaLabel, title, disabled = false } = Astro.props;
---
{
  disabled ? (
    <span
      id={id}
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {target}
      id={id}
      {href}
      class:list={["group inline-block hover:text-accent", className]}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}
