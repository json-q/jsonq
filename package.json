    "dayjs": "^1.11.13",
    "flexsearch": "^0.7.43",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "lucide-react": "^0.474.0",
    "next": "15.1.6",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-prism-plus": "^2.0.0",
